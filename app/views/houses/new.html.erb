<h1>Create a House</h1>

<%= form_for(@house) do |f| %>
  <%= f.label(:region_id) %>
  <%= f.collection_select(:region_id, @regions, :id, :name) %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:history) %>
  <%= f.text_area(:history, size: "60x12") %>
  <%= f.hidden_field(:user_id, :value => current_user.id) %>
  <%= f.submit %>
<% end %>
